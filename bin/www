#!/usr/bin/env node

/**
 * Module dependencies.
 */
//const io = require("../tool/io")
var app = require('../app');
var debug = require('debug')('demo:server');

var http = require('http');
const fs = require('fs');
const https = require('https');//node内置https serve
/**
 * Get port from environment and store in Express.
 */

var options = {
  key: fs.readFileSync('./config/mgdg.shop.key'),  //私钥文件路径
  cert: fs.readFileSync('./config/mgdg.shop_bundle.crt')  //证书文件路径
};
 const httpsServer =  https.createServer(options, app.callback());
//  io(httpsServer)
 httpsServer.listen(443, () => {
  console.log(`server running success at 443`)
});

var port = normalizePort(process.env.PORT || '80');
// app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app.callback());
//io(server)


/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
